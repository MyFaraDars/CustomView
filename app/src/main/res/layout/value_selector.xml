<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/value_selector_bg">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btn_minus"
        android:layout_width="@dimen/valueselector_button_wh"
        android:layout_height="@dimen/valueselector_button_wh"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/valueselector_margin_left_right"
        android:layout_marginTop="@dimen/valueselector_margin_top_bottom"
        android:layout_marginRight="@dimen/valueselector_margin_left_right"
        android:layout_marginBottom="@dimen/valueselector_margin_top_bottom"
        app:srcCompat="@drawable/minus" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:maxWidth="30dp"
        android:minWidth="24dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btn_plus"
        android:layout_width="@dimen/valueselector_button_wh"
        android:layout_height="@dimen/valueselector_button_wh"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/valueselector_margin_left_right"
        android:layout_marginTop="@dimen/valueselector_margin_top_bottom"
        android:layout_marginRight="@dimen/valueselector_margin_left_right"
        android:layout_marginBottom="@dimen/valueselector_margin_top_bottom"
        app:srcCompat="@drawable/plus" />

</LinearLayout>